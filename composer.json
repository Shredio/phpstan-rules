{
	"name": "shredio/phpstan-rules",
	"type": "phpstan-extension",
	"license": "MIT",
	"require": {
		"php": ">=8.3"
	},
	"autoload": {
		"psr-4": {
			"Shredio\\PhpstanRules\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests"
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse",
		"test": "vendor/bin/phpunit tests"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1",
		"phpunit/phpunit": "^12.2"
	},
	"extra": {
		"phpstan": {
			"includes": [
				"rules.neon",
				"extension.neon"
			]
		}
	}
}
